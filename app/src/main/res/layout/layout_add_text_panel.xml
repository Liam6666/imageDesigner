<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:background="#000"
    android:clickable="true"
    android:paddingTop="40dp"
    android:paddingBottom="30dp">


    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="@drawable/back_shadow"
        android:padding="6dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="文字 : "
        android:textColor="#fff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/changeText"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/button_operation"
        android:text="修改"
        android:textColor="#0088ff"
        android:textSize="12dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text"
        app:layout_constraintLeft_toRightOf="@id/tv_text" />

    <TextView
        android:id="@+id/tv_text_content"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text"
        tools:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊" />


    <TextView
        android:id="@+id/tv_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="文字颜色 :"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_text_content" />


    <TextView
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:text="R:"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_color" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/rSeekBar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/seekbar_scale"
        android:thumbTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="@id/r"
        app:layout_constraintLeft_toRightOf="@id/r"
        app:layout_constraintTop_toTopOf="@id/r" />


    <TextView
        android:id="@+id/g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:text="G:"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/r" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/gSeekBar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/seekbar_scale"
        android:thumbTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="@id/g"
        app:layout_constraintLeft_toRightOf="@id/g"
        app:layout_constraintTop_toTopOf="@id/g" />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="5dp"
        android:text="B:"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/g" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/bSeekBar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/seekbar_scale"
        android:thumbTint="#03A9F4"
        app:layout_constraintBottom_toBottomOf="@id/b"
        app:layout_constraintLeft_toRightOf="@id/b"
        app:layout_constraintTop_toTopOf="@id/b" />


    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="文字大小 :"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/b" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sizeSeekBar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="12dp"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/seekbar_scale"
        android:thumbTint="#03A9F4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_size" />


    <TextView
        android:id="@+id/tv_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:text="文字旋转角度 :"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sizeSeekBar" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/rotationSeekBar"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="12dp"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/seekbar_scale"
        android:thumbTint="#03A9F4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rotation" />

    <Button
        android:id="@+id/delete"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_red_notice"
        android:text="删除"
        android:textColor="#fff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rotationSeekBar" />


</androidx.constraintlayout.widget.ConstraintLayout>