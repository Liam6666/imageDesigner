<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollY="35dp"
    tools:background="#000">


    <ImageView
        android:id="@+id/plane"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:id="@+id/treeLayout"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:scrollX="-200dp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:src="@drawable/tree_1" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/tree_2"
                android:translationY="2dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:src="@drawable/tree_2"
                android:translationY="2dp" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="32dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/tree_1"
                android:translationY="2dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/tree_2"
                android:translationY="2dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/tree_1" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="22dp"
                android:src="@drawable/tree_2"
                android:translationY="2dp" />

        </LinearLayout>
    </FrameLayout>


    <View
        android:id="@+id/line"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="55dp"
        android:background="#fff"
        app:layout_constraintLeft_toLeftOf="@id/plane"
        app:layout_constraintRight_toRightOf="@id/plane"
        app:layout_constraintTop_toBottomOf="@id/plane" />


</androidx.constraintlayout.widget.ConstraintLayout>